<% if not @incident.pd_incident_id.nil? %>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

<div class="modal fade" id="respondersModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
        <%= form_tag add_responders_incident_path(@incident) do %>
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Responders</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            Users:
              <%= select_tag 'user_ids[]', options_for_select(@users.map { |s| [s['email'], s['id']]}), class: "form-control", multiple: true %>
            Escalation Policies:
              <%= select_tag 'ep_ids[]', options_for_select(@eps.map { |s| [s['summary'], s['id']]}), class: "form-control", multiple: true %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <%= submit_tag "Add Responders", class: "btn btn-primary" %>
            </div>
        <% end %>
        </div>
    </div>
</div>

<div class="modal fade" id="subscribersModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
        <%= form_tag add_subscribers_incident_path(@incident) do %>
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Subscribers</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            Users:
              <%= select_tag 'user_ids[]', options_for_select(@users.map { |s| [s['email'], s['id']]}), class: "form-control", multiple: true %>
            Teams:
              <%= select_tag 'team_ids[]', options_for_select(@teams.map { |s| [s['summary'], s['id']]}), class: "form-control", multiple: true %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <%= submit_tag "Add Subscribers", class: "btn btn-primary" %>
            </div>
        <% end %>
        </div>
    </div>
</div>

<% end %>