<h1>New Template</h1>
<p>&nbsp;</p>
<%= form_with model: @message_template, url: message_templates_path, local: true do |form| %>
    <div class="form-row">
        <div class="form-group col-md-2" align="right">
            Name:
        </div>
        <div class="form-group col-md-10">
            <%= text_field_tag(:name, nil, class: "form-control", required: true) %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2" align="right">
            Template Text:
        </div>
        <div class="form-group col-md-10">
            <%= text_area_tag(:text, nil, class: "form-control", required: true) %>
        </div>
    </div>

    <div align="right">
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
<% end %>